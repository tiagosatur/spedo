      nav.main-nav
        ul.main-nav__menu
          li.main-nav__menu-item: #[a(href="#") Home #[i.fa.fa-angle-down]]
          li.main-nav__menu-item: #[a(href="#") Catalog #[i.fa.fa-angle-down]]
          li.main-nav__menu-item: #[a(href="#") About #[i.fa.fa-angle-down]]
          li.main-nav__menu-item: #[a(href="#") Prices #[i.fa.fa-angle-down]]
          li.main-nav__menu-item: a(href="#") Blog
          li.main-nav__menu-item: a(href="#") Contact
          li.main-nav__menu-item.main-nav__menu-item--search
            form.main-nav__menu-item__search: #[i.fa.fa-search] #[input(type="text", placeholder=' Search')]
    div.slider-controls
      #[a(href="#").slider-arrow__left #[i.fa.fa-angle-left.fa-2x]]
      #[a(href="#").slider-arrow__right #[i.fa.fa-angle-right.fa-2x]]
      div.slider-nav
      div.slider-container      
        - for slide,i in sliderContent
          section(class='main-slider main-slider--' + (i + 1))
            p.main-slider__launch= slide.launch
            p.main-slider__title= slide.title
            p.main-slider__text= slide.text        
            //p: img(src='/images/main-slider_'+(i+1)+'.png').main-slider__img
            p.main-slider__button: #[a(href="#") Shop now #[i.fa.fa-angle-right]]
                  
    section.featured-categories
      ul.featured-categories__items
        li.featured-categories__item: #[a(href="#")] #[a(href="#") Best of whites.] #[a(href="#") View products #[i.fa.fa-angle-right]]
        li.featured-categories__item: #[a(href="#")] #[a(href="#") Best of red.] #[a(href="#") View products #[i.fa.fa-angle-right]]
        li.featured-categories__item: #[a(href="#")] #[a(href="#") Best of summer.] #[a(href="#") View products #[i.fa.fa-angle-right]]
        li.featured-categories__item: #[a(href="#")] #[a(href="#") Best of black.] #[a(href="#") View products #[i.fa.fa-angle-right]]   
          
    section.main-products
      h2.main-products__title Our products
      p.main-products__subtitle New products every fucken day.
      ul.main-products__items        
        - for product,i in products
          li.main-products__item.product(style='background-image: url(/images/product__image_'+(i+1)+'.png)')
            //img.product__image(src='/images/product__image_'+(i+1)+'.png')            
            div.product__buttons-container
              a.product__add-to-cart(href="#") Add to cart
              a.product__show-gallery(href="#") Show gallery          
            div.product__info
              p.product__info-name= product.name
              p.product__info-collection= product.collection
              p.product__info-price= product.price
              p.product__info-sizes: #[strong Sizes] xs, sm, l, xl, xxl 
              p.product__info-colors Colors
              ul.product-colors
                li.product-colors__item
                li.product-colors__item
                li.product-colors__item
                li.product-colors__item
              
